<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../public/tasks.css" />
    <script defer src="../public/tasks.js"></script>
  </head>
  <body>
    <div class="button" id="logout">
      <button><span>logout</span></button>
    </div>
    <section class="container">
      <div class="heading">
        <img
          class="heading__img"
          src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/756881/laptop.svg"
        />
        <h1 class="heading__title">To-Do List</h1>
      </div>
      <div>
        <form>
          <label class="form__label" for="todo">~ Today I need to ~</label>
          <input
            class="form__input"
            type="text"
            size="30"
            required
            id="create-input"
          />
          <button class="button" id="btn-create"><span>Submit</span></button>
        </form>
      </div>
      <div id="feed" class="wrapper"></div>
    </section>
  </body>
</html>
